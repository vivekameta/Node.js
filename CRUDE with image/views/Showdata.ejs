  <br>

  <!-- // Form //  -->

  <center style="margin-top: 100px;">
    <table class="table table-bordered" >
      
      <h1>Book Details </h1>
      <thead>
        <tr>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Author</th>
          <th scope="col">Published year</th>
          <th scope="col">Pages</th>
          <th scope="col">Price</th>
          <th scope="col">Published Copies</th>
          <th scope="col">Edit</th>
          <th scope="col">Remove</th>
          
  
        
        </tr>
      </thead>
      <tbody>
      
          <% data.map((el,i)=>{ %>
            <tr>
              <th ><img src="<%=el.image %>" alt="" width="00%"></th>
              <th ><%=el.title%></th>
              <td><%=el.author%></td>
              <td><%=el.pb_year%></td>
              <td><%=el.pages%></td>
              <td><%=el.price%></td>
              <td><%=el.pb_copies%></td>
              <td ><a href="/editdata?id=<%=el.id%>" style="text-decoration: none;">
                <i class="ri-edit-box-line text-success"></i>
              </a> </td>
  
              <td>
                <a href="/deletdata?id=<%=el.id%>" style="text-decoration: none;">
                  <i class="ri-delete-bin-line text-danger"></i>
                </a></i></td>
            </tr>
         <% }) %>
          
       
        </tbody>
      </table>
     
      
    

       
  
  </center>
 </div>
