<!-- // Form // -->
 <div class="add_data">
 
  
  <br>
  <form>
    <label for=""><h1>Show data :</h1></label> <br> <br> 
  <table class="table" style="text-align: center;">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Remove</th>
        <th scope="col">Edit</th>

      </tr>
    </thead>
    <tbody>

      <% data.map((el,i)=>{%>
        <tr>
          <th scope="row"><%=el.id %></th>
          <td><%=el.name %></td>
          <td><%=el.email %></td>
          <td><a href="/deletedata?userid=<%=el.id %>"><i class="fa-solid fa-trash"></i></a></td>
          <td><a href="/updatedata?editid=<%=el.id %>"><i class="fa-solid fa-pen-to-square"></i></a></td>

        </tr>
      <%})%>
     
      
    </tbody>
    
  </table>
<a href="/">Go to home</a>

</form>

</div>
